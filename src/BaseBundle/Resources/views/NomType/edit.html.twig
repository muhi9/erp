{% extends "::base.html.twig" %}

{% block title %}{{'nomtype.nomtype_edit'|trans}}{% endblock %}


{% block content_body %}

<!-- begin:: Content Body -->

<div class="row">
  <div class="col-md-12">
    <div class="k-portlet">
      <div class="k-portlet__head">
        <div class="k-portlet__head-label">
          <a href="{{ path('nom_type_index', { 'page': 'nom_type_edit'})}}" class="k-margin-r-5  btn btn-brand k-content__head-back-link"><i class="flaticon-reply"></i>{{'label.back'|trans }}</a>
 
          <h3 class="k-portlet__head-label">{{'nomtype.nomtype_edit'|trans}}</h3>
        </div>
      </div>

      {{ form_start(form,{attr: {novalidate:'novalidate'}})}}
      {{ form_errors(form.nameKey) }}
      {{ form_row(form.nameKey) }}
      {{ form_row(form.name) }}
      {{ form_errors(form.name) }}
      {{ form_row(form.parent) }}
      {{ form_errors(form.parent) }}
      {{ form_row(form.status) }}
      {{ form_row(form.extra) }}
          {% if(form.extraField is defined and form.extraField.vars['value'] is not empty)%}
            {% set efields = form.extraField.vars['value']|split(',') %}
            {% for f in efields%}
                <div class="form-group row validate extraField">
                    <label class="col-form-label col-lg-3 col-sm-12 required" for="nom_name">{{'nomtype.name'|trans}}</label>
                    <div class="col-lg-9 col-md-9 col-sm-12">
                        <input id="nom_name" name="noms[extraField][]" required="required"  class="form-control" im-insert="true" aria-describedby="name-error" type="text" value="{{f}}">
                    </div>
                </div>
            {%endfor%}
        {% endif%}
    {{ form_row(form.descr) }}
  {{ form_row(form.save) }}
  {{ form_row(form._token) }}
{{ form_end(form) }}
    </div>
  </div>
</div>


<!-- end:: Content Body -->

{% endblock content_body %}

{% block content_breadcrumb %}
            <a href="{{ path('homepage')}}" class="k-content__head-breadcrumb-link">{{'label.dashboards'|trans }}</a>
            <span class="k-content__head-breadcrumb-separator"></span>
            <a href="{{ path('nom_type_index', { 'page': 'nom_type_edit'})}}" class="k-content__head-breadcrumb-link">Nomenclatures</a>
            <span class="k-content__head-breadcrumb-separator"></span>
            <span class="k-content__head-breadcrumb-link k-content__head-breadcrumb-link--active">Edit</span>

{% endblock content_breadcrumb %} 

{% block javascripts %}
    {{ parent() }}
{% javascripts filter='uglifyjs2' '@BaseBundle/Resources/public/js/nomtypeExtra.js'%}
        <script src="{{ asset_url }}?r={{ver}}" type="text/javascript"></script>

{% endjavascripts %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
